<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	.underline-hover {
		position: relative;
		border-bottom: 1px solid var(--underline-color, currentColor);

		&::before {
			content: "";
			position: absolute;
			width: 100%;
			height: 1px;
			bottom: -1px;
			left: 0;
			transform-origin: right;
			transform: scaleX(0);
			transition: transform 0.4s cubic-bezier(0.22, 0.61, 0.36, 1);
			background-color: var(--underline-before-color, currentColor);
		}

		&:hover::before {
			transform-origin: left;
			transform: scaleX(1);
		}
	}

	html {
		font-family: "Inter", sans-serif;
		font-optical-sizing: auto;
		font-weight: 400;
		scroll-behavior: smooth;
	}
</style>
