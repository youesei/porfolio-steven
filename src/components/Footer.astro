---
import ArrowUp from "./ArrowUp.astro";
---

<footer
  id="footer"
  class="sticky top-0 h-dvh text-white"
  data-dev-name-opacity="0"
>
  <header class="relative z-20 bg-gray-300 h-dvh px-12">
    <h1>AAAAAAAAAAAAAAAAAAAAA</h1>
  </header>
  <main
    class="xl:sticky xl:bottom-0 py-16 bg-black h-dvh px-5 xl:px-12 flex flex-col justify-between xl:gap-y-36"
  >
    <h3
      class="xl:text-[5.5rem] text-[2.5rem] tracking-tight leading-none max-w-3xl xl:mt-[-1.6rem]"
    >
      Nice to meet you, Letâ€™s connect.
    </h3>

    <section class="flex flex-col gap-y-7">
      <p class="xl:text-2xl text-xl text-gray-600">Find me elsewhere on web.</p>

      <ul id="contacts" class="flex flex-col xl:flex-row gap-y-4 xl:gap-x-8">
        <li class="text-xl xl:text-2xl">
          <a
            style="--underline-color: #4b5563; --underline-before-color: #fff;"
            class="underline-hover pb-2 inline-block"
            href="https://www.google.com"
            target="_blank"
            referrerpolicy="no-referrer"
          >
            LinkedIn
          </a>
        </li>
        <li class="text-xl xl:text-2xl">
          <a
            style="--underline-color: #4b5563; --underline-before-color: #fff;"
            class="underline-hover pb-2 inline-block"
            href="https://www.google.com"
            target="_blank"
            referrerpolicy="no-referrer"
          >
            correo@correo.com
          </a>
        </li>
      </ul>
    </section>

    <footer class="flex justify-between items-center">
      <p class="xl:text-xl text-base">&copy2024 - Esteven Zapata</p>
      <button
        class="bg-white go-top xl:w-16 xl:h-16 w-10 h-10 rounded-full flex items-center justify-center"
      >
        <!-- <ArrowUp width="22" /> -->
        <ArrowUp width="14" />
      </button>
    </footer>
  </main>
</footer>

<script>
  const buttonGoTop = document.querySelector(".go-top") as HTMLElement;

  buttonGoTop.addEventListener("click", () => {
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  });
</script>

<style is:global>
  @keyframes arrow-up {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-40px);
    }
  }

  @keyframes arrow-down {
    0% {
      transform: translateY(40px);
    }
    100% {
      transform: translateY(0);
    }
  }

  .go-top:hover svg path {
    animation:
      arrow-up 0.2s ease-in-out forwards,
      arrow-down 0.2s ease-in-out forwards 0.2s;
  }
</style>
