---
import MarqueeLayout from "../layouts/MarqueeLayout.astro";
import MarqueeItem from "./MarqueeItem.astro";
import MarqueeSeparator from "./MarqueeSeparator.astro";

const MARQUEE_TITLES = [
  "4+ a√±os de experiencia",
  "Frontend Developer",
  "Backend Developer",
  "Movile Developer",
  "Testing",
] as const;
---

<MarqueeLayout class="animate-marquee">
  {
    MARQUEE_TITLES.map(title => (
        <MarqueeItem text={title} />
