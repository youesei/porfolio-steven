---
import ArrowRight from "./ArrowRight.astro";

interface Props {
  projectName: string;
}

const { projectName } = Astro.props;
---

<li>
  <a
    style="--underline-color: #e5e7eb; --underline-before-color: #000;"
    class="underline-hover py-5 cursor-pointer flex items-center justify-between text-xl"
    data-project-name={projectName}
  >
    <span>{projectName}</span>
    <div class="relative">
      <div class="h-6 absolute bg-white z-30 -top-3 w-4 -left-8"></div>
      <span class="absolute arrow-right">
        <ArrowRight />
      </span>
    </div>
  </a>
</li>

<style>
  li a .arrow-right {
    display: flex;
    align-items: center;
    left: -2rem;
    bottom: -7px;
    transition-duration: 0.3s;
  }

  li:hover a .arrow-right {
    left: -0.9rem;
  }
</style>

<script>
  const links = document.querySelectorAll("a[data-project-name]");

  links.forEach((link) => {
    link.addEventListener("click", () => {
      const projectName = link.getAttribute("data-project-name");
      const target = document.querySelector(`#${projectName}`) as HTMLElement;
      target.scrollIntoView({
        behavior: "smooth",
      });
    });
  });
</script>
